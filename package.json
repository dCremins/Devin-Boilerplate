{
    "name": "Boilerplate",
    "version": "1.0.0",
    "description": "Basic Boilerplate for Websites",
    "main": "gulpfile.js",
    "author": "Devin Cremins, octopusoddments <devincremw@gmail.com>",
    "license": "MIT",
    "private": true,
    "paths": {
        "development": {
            "base": "app/",
            "css": "app/css/",
            "scss": "app/scss/",
            "js": "app/js/",
            "fonts": "app/fonts/",
            "img": "app/img/",
            "sourcemaps": "./maps/"
        },
        "html": {
            "base": "dist/html-boilerplate/",
            "css": "dist/html-boilerplate/css/",
            "sourcemaps": "dist/html-boilerplate/css/maps/",
            "js": "dist/html-boilerplate/js/",
            "fonts": "dist/html-boilerplate/fonts/",
            "img": "dist/html-boilerplate/img/"
        },
        "php": {
            "base": "dist/php-boilerplate/",
            "css": "dist/php-boilerplate/css/",
            "sourcemaps": "dist/php-boilerplate/css/maps/",
            "js": "dist/php-boilerplate/js/",
            "fonts": "dist/php-boilerplate/fonts/",
            "img": "dist/php-boilerplate/img/"
        },
        "scss": [
            "./node_modules/breakpoint-sass/stylesheets/",
            "./node_modules/modularscale-sass/stylesheets/",
            "./node_modules/sass-math-pow/sass/"
        ]
    },
    "vars": {
        "scssName": "style.scss",
        "cssName": "style.css"
    },
    "globs": {
        "css": [
            "./node_modules/normalize.css/normalize.css",
            "./app/css/*.css"
        ],
        "img": [
            "./app/img/"
        ],
        "js": [
            "./app/js/"
        ],
        "fonts": [
            "./app/fonts/*.{eot,ttf,woff,woff2}"
        ]
    },
    "dependencies": {
        "normalize.css": "^5.0.0"
    },
    "devDependencies": {
        "breakpoint-sass": "^2.7.1",
        "browser-sync": "^2.18.12",
        "fancy-log": "^1.3.0",
        "gulp": "^3.9.0",
        "gulp-autoprefixer": "^4.0.0",
        "gulp-cached": "^1.1.1",
        "gulp-clean-css": "^3.4.1",
        "gulp-concat": "^2.6.1",
        "gulp-cssimport": "^5.0.0",
        "gulp-html-import": "^0.0.2",
        "gulp-inject": "^4.2.0",
        "gulp-load-plugins": "^1.3.0",
        "gulp-minify": "^1.0.0",
        "gulp-plumber": "^1.1.0",
        "gulp-sass": "^3.1.0",
        "gulp-sourcemaps": "^2.6.0",
        "modularscale-sass": "^3.0.2",
        "sass-math-pow": "^0.1.4"
    },
    "scripts": {
        "start": "gulp",
        "build": "gulp build"
    }
}
